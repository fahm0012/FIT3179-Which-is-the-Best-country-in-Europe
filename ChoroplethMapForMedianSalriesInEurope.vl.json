{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Median Income in Different Countires of Europe in 2016",
  "width": 800,
  "height": 700,
  "data": {
    "url": "https://raw.githubusercontent.com/fahm0012/FIT3179-Which-is-the-Best-country-in-Europe/main/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/fahm0012/FIT3179-Which-is-the-Best-country-in-Europe/main/EuropeClean2016DataSet.csv"
        },
        "key": "country",
        "fields": ["MedianIncome", "Population"]
      }
    },
    {"calculate": "datum.MedianIncome", "as": "Median Income"}
  ],
  "projection": {
    "type": "equalEarth",
    "scale": 1000,
    "center": [20, 50],
    "clipExtent": [[0, 0], [800, 700]]
  },
  "layer": [
    {"mark": {"type": "geoshape", "stroke": "#f1eded", "strokeWidth": 1}},
    {
      "mark": "text",
      "encoding": {
        "text": {"field": "properties.NAME", "type": "nominal"},
        "longitude": {"field": "properties.longitude", "type": "quantitative"},
        "latitude": {"field": "properties.latitude", "type": "quantitative"},
        "size": {"value": 20},
        "opacity": {"value": 0.6}
      }
    }
  ],
  "encoding": {
    "color": {
      "field": "Median Income",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [5000, 10000, 15000, 20000, 25000],
        "range": [
          "#ffffcc",
          "#c7e9b4",
          "#7fcdbb",
          "#41b6c4",
          "#2c7fb8",
          "#253494"
        ]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Median Income", "type": "quantitative"}
    ]
  },
  "config": {}
}