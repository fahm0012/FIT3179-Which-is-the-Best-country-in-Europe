{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/fahm0012/FIT3179-Which-is-the-Best-country-in-Europe/main/EuropeLivingIndex(2013-2020).csv"
  },
  "width":550,
  "height":580,
  "title": {
    "text": "Cost of Living Index in different Countries Of Europe from (2013-2020)",
    "fontSize": 20
  },
  "mark": "rect",
  "encoding": {
    "y": {
      "field": "Country",
      "type": "nominal",
      "axis": {"title": null, "labelFontSize": 15, "titleFontSize": 15}
    },
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {"title": "Years", "labelFontSize": 15, "titleFontSize": 15,"labelAngle":0}
    },
    "color": {
      "field": "Costoflivingindex",
      "title": "Cost of living Index",
      "scale": {"type": "linear"},
      "legend": {"labelFontSize": 15, "titleFontSize": 15}
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {
        "field": "Costoflivingindex",
        "type": "quantitative",
        "title": "Cost of living index"
      }
    ]
  },
  "config": {"axis": {"grid": true, "tickBand": "extent"}}
}
